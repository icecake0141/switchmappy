<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>VLANs - SwitchMap</title>
  <link rel="stylesheet" href="/switchmap.css" />
</head>
<body>
  <header>
    <h1>VLANs</h1>
    <p>Generated at {{ build_date.isoformat() }}</p>
  </header>
  {% for switch in switches %}
  <section>
    <h2>{{ switch.name }}</h2>
    <table>
      <thead>
        <tr>
          <th>VLAN ID</th>
          <th>Name</th>
          <th>Ports</th>
        </tr>
      </thead>
      <tbody>
      {% for vlan in switch.vlans %}
        <tr>
          <td>{{ vlan.vlan_id }}</td>
          <td>{{ vlan.name }}</td>
          <td>{{ vlan.ports | join(", ") }}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </section>
  {% endfor %}
</body>
</html>
