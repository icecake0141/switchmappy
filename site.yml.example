# Example configuration for switchmappy.
# Copy this file to site.yml and adjust values for your environment.
destination_directory: output
idlesince_directory: idlesince
maclist_file: maclist.json
unused_after_days: 30
# SNMP timeout in seconds for each request.
# Increase for high-latency links.
snmp_timeout: 2
# Number of retries for failed SNMP requests.
# Keep low (0-2) to avoid long execution times.
snmp_retries: 1

switches:
  - name: core-sw1
    management_ip: 192.0.2.10
    vendor: cisco
    snmp_version: 2c
    community: public
    # Trunk ports are marked in reports; list interface names as reported by IF-MIB.
    trunk_ports: ["Gi1/0/48"]
  - name: access-sw1
    management_ip: 192.0.2.20
    vendor: generic
    snmp_version: 2c
    community: public
    trunk_ports: ["Gi1/0/24"]

routers:
  - name: edge-router
    management_ip: 192.0.2.1
    snmp_version: 2c
    community: public
